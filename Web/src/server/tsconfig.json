{
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "NodeNext",

        /* Base Options */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,

        /* Strictness */
        "strict": true,
        "noImplicitOverride": true,

        /* For transpiling with TypeScript: */
        "rootDir": "..",
        "outDir": "dist",
        "sourceMap": true,

        /* Path Aliases */
        "paths": {
            "Server/*": ["./src/*"],
            "Shared/*": ["../shared/src/*"]
        }
    },
    "include": ["./src/**/*", "../shared/src/**/*"],
    "references": [{ "path": "../shared/tsconfig.server.json" }]
}
